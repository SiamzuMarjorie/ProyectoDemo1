@{
    ViewBag.Title = "NuevoCurso";
}

<div>
    <div class="h-line"></div>
    <div class="">
        <h1 class="subtitle">Nuevo Curso</h1>
        <div class="columns columns-2">
            <div class="col col-1">
                <div class="form-field">
                    <label class="label" for="codigo">Código</label>
                    <input type="text" name="codigo" id="codigo" placeholder="Código" />
                </div>
                <div class="form-field">
                    <label class="label" for="horas">Horas</label>
                    <input type="text" name="titulo" id="horas" placeholder="Horas" />
                </div>
            </div>
            <div class="col col-1">
                <div class="form-field">
                    <label class="label" for="titulo">Título</label>
                    <input type="text" name="titulo" id="titulo" placeholder="Título" />
                </div>
                <div class="form-field">
                    <label class="label" for="puntos">Puntos</label>
                    <input type="text" name="puntos" id="puntos" placeholder="Puntos" />
                </div>
            </div>
        </div>
        <div class="columns columns-4">
            <div class="col col-3">
                <div class="form-field">
                    <label class="label" for="cursohtml5">Curso HTML5</label>
                    <input type="text" name="titulo" id="cursohtml5" placeholder="Curso HTML5" />
                </div>
            </div>
            <div class="col col-1">
                <div class="form-field">
                    <input type="text" placeholder="hola"/>
                </div>
            </div>
        </div>
            
            <div class="table paged">
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Recurso</th>
                                <th>Obligatorio</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < 4; i++)
                            {
                                <tr>
                                    <td>datos</td>
                                    <td><input type="checkbox" /></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="screen-actions-cursos">
                <a href="@Url.Action("Cursos","Cursos")" class="align-left button btn-color01 btn-icon-left ic-volver">Volver</a>
                <a onclick="history.back();" class="button btn-color02 btn-icon-right btn-icon-agregar">Guardar</a>
            </div>
        </div>
</div>